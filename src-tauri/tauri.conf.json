{
    "build": {
        "beforeDevCommand": "",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:5173",
        "distDir": "../dist"
    },
    "package": {
        "productName": "Floating Productivity Widget",
        "version": "1.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false
        },
        "bundle": {
            "active": true,
            "identifier": "com.floating-widget.app",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "title": "Floating Productivity Widget",
                "width": 350,
                "height": 500,
                "resizable": false,
                "fullscreen": false,
                "alwaysOnTop": true,
                "decorations": false,
                "transparent": false,
                "center": true
            }
        ]
    }
}